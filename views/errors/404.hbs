{{#extends 'base'}}

{{#block 'content'}}
<div
    class="h-full bg-white/[0.9] dark:bg-zinc-700/[0.9] flex items-center flex-col justify-center lg:flex-row px-6 md:px-24 gap-16 lg:gap-28">
    <div class="w-full lg:w-1/2">
        <img src="/assets/img/404.png" alt="404 not found" />
    </div>
    <div class="w-full lg:w-1/2">
        <h1 class="py-4 text-3xl lg:text-4xl font-extrabold text-gray-800 dark:text-white">Looks like you've found the
            doorway to the great nothing</h1>
        <p class="py-4 text-base text-gray-800 dark:text-white">The content you’re looking for doesn’t exist. Either it
            was removed, or you mistyped the link.</p>
        <p class="py-2 text-base text-gray-800 dark:text-white">Sorry about that!</p>
        <div class="mt-2 flex justify center">
            <a href="/products"
                class="w-auto my-4 rounded-md px-1 sm:px-16 py-5 bg-amber-600 text-white hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-700 focus:ring-opacity-50">
                Go back to Homepage
            </a>
        </div>
    </div>
</div>
{{/block}}


{{#extends "base"}}

{{#block "content"}}
<div class="bg-gradient-to-tl from-green-400 to-amber-900 dark:from-stone-500 dark:to-neutral-900 w-full py-16 px-4">
    <div class="flex flex-col items-center justify-center">
        <div class="bg-white shadow rounded dark:bg-zinc-700 lg:w-1/3  md:w-1/2 w-full p-10">
            <p tabindex="0"
                class="pb-8 focus:outline-none text-base sm:text-lg md:text-xl lg:text-2xl font-bold leading-normal text-gray-800 dark:text-white">
                User Profile
            </p>
            <p class="pb-3 focus:outline-none text-base text-gray-800 dark:text-white">
                Username: {{user.username}}
            </p>
            <p class="pb-3 focus:outline-none text-base text-gray-800 dark:text-white">
                Email: {{user.email}}
            </p>
            <p class="pb-3 focus:outline-none text-base text-gray-800 dark:text-white">
                Account Type: {{user.type}}
            </p>
            <p tabindex="0"
                class="py-4 focus:outline-none text-base sm:text-md md:text-lg lg:text-xl font-bold leading-normal text-gray-800 dark:text-white">
                Change Password
            </p>
            <form method="POST">
                <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                {{{form}}}
                <div class="mt-8">
                    <button type="submit" role="button"
                        class="focus:ring-2 focus:ring-offset-2 focus:ring-amber-700 text-sm font-semibold leading-none text-white focus:outline-none bg-yellow-700 hover:bg-amber-300 border rounded py-4 w-full">
                        Update
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{{/block}}

{{/extends}}
{{#extends "dashboard"}}
  {{#block "content"}}
    <h1>
      Plants Specifications
    </h1>
    <div class="w-full mb-8 overflow-hidden">
      <div class="w-full overflow-x-auto">
        <div class="overflow-x-auto">
          <table class="table w-full">
            <!-- head -->
            <thead>
              <tr>
                <th>
                  ID
                </th>
                <th>
                  Name
                </th>
                <th>
                  Alias
                </th>
                <th>
                  Species
                </th>
                <th>
                  Description
                </th>
                <th>
                  Actions
                </th>
              </tr>
            </thead>
            <tbody>
              {{#each plants}}
                <tr>
                  <td>
                    {{this.id}}
                  </td>
                  <td>
                    {{this.name}}
                  </td>
                  <td>
                    {{this.alias}}
                  </td>
                  <td>
                    {{this.species.name}}
                  </td>
                  <td>
                    {{this.description}}
                  </td>
                  <td></td>
                </tr>
              {{/each}}
            </tbody>
          </table>

        </div>
      </div>
    </div>
  {{/block}}
{{/extends}}
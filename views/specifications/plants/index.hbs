{{#extends "dashboard"}}
  {{#block "content"}}
    <div class="w-full py-4 flex justify-between">
      <h1 class="text-lg">
        Plants Specifications
      </h1>
      <a href="./plants/create">
        <button class="btn btn-sm btn-outline btn-primary">
          Add
        </button>
      </a>
    </div>
    <div class="w-full mb-8 overflow-hidden">
      <div class="w-full overflow-x-auto">
        <div class="overflow-x-auto">
          <table class="table w-full">
            <thead>
              <tr>
                <th>
                  ID
                </th>
                <th>
                  Name
                </th>
                <th>
                  Alias
                </th>
                <th>
                  Species
                </th>
                <th>
                  Description
                </th>
                <th>
                  Actions
                </th>
              </tr>
            </thead>
            <tbody>
              {{#each plants}}
                <tr>
                  <td>
                    {{this.id}}
                  </td>
                  <td>
                    {{this.name}}
                  </td>
                  <td>
                    {{this.alias}}
                  </td>
                  <td>
                    {{this.species.name}}
                  </td>
                  <td>
                    {{this.description}}
                  </td>
                  <td></td>
                </tr>
              {{/each}}
            </tbody>
          </table>

        </div>
      </div>
    </div>
  {{/block}}
{{/extends}}
{{#extends "dashboard"}}
  {{#block "content"}}
    <div class="w-full py-4 flex justify-between">
      <h1 class="text-lg">
        Planters Specifications
      </h1>
      <a href="./planters/create">
        <button class="btn btn-sm btn-outline btn-primary">
          Add
        </button>
      </a>
    </div>
    <div class="w-full mb-8 overflow-hidden">
      <div class="w-full overflow-x-auto">
        <div class="overflow-x-auto">
          <table class="table w-full">
            <thead>
              <tr>
                <th>
                  ID
                </th>
                <th>
                  Name
                </th>
                <th>
                  Type
                </th>
                <th>
                  Material
                </th>
                <th>
                  Description
                </th>
                <th>
                  Actions
                </th>
              </tr>
            </thead>
            <tbody>
              {{#each planters}}
                <tr>
                  <td>
                    {{this.id}}
                  </td>
                  <td>
                    {{this.name}}
                  </td>
                  <td>
                    {{this.type.type}}
                  </td>
                  <td>
                    {{this.material.material}}
                  </td>
                  <td>
                    {{this.description}}
                  </td>
                  <td></td>
                </tr>
              {{/each}}
            </tbody>
          </table>

        </div>
      </div>
    </div>
  {{/block}}
{{/extends}}